<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="se.racetime.homeautomation.app.TemperatureFragment"
android:columnCount="3"
android:rowCount="10"
android:useDefaultMargins="false">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Temperatur"
    android:id="@+id/textViewHeader"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_row="0"
    android:layout_column="0" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="22 C"
    android:id="@+id/textViewTempInside"
    android:layout_row="1"
    android:layout_column="0" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TempInside"
    android:id="@+id/buttonTempInside"
    android:layout_row="1"
    android:layout_column="1" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="10 C"
    android:id="@+id/textViewTempOutside1"
    android:layout_row="2"
    android:layout_column="0" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TempOutside1"
    android:id="@+id/buttonTempOutside1"
    android:layout_row="2"
    android:layout_column="1" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="11 C"
    android:id="@+id/textViewTempOutside2"
    android:layout_row="3"
    android:layout_column="0" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TempOutside2"
    android:id="@+id/buttonTempOutside2"
    android:layout_row="3"
    android:layout_column="1" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="30 C"
    android:id="@+id/textViewTempPadio"
    android:layout_row="4"
    android:layout_column="0" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TempPadio"
    android:id="@+id/buttonTempPadio"
    android:layout_row="4"
    android:layout_column="1" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="16 C"
    android:id="@+id/textViewTempBasement"
    android:layout_row="5"
    android:layout_column="0" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TempBasement"
    android:id="@+id/buttonTempBasement"
    android:layout_row="5"
    android:layout_column="1" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="14 C"
    android:id="@+id/textViewTempAttic"
    android:layout_row="6"
    android:layout_column="0" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TempAttic"
    android:id="@+id/buttonTempAttic"
    android:layout_row="6"
    android:layout_column="1" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="13 C"
    android:id="@+id/textViewTempUnderhouse"
    android:layout_row="7"
    android:layout_column="0" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TempUnderhouse"
    android:id="@+id/buttonTempUnderhouse"
    android:layout_row="7"
    android:layout_column="1" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Update"
    android:id="@+id/buttonUpdate"
    android:layout_row="8"
    android:layout_column="1" />

<LinearLayout
    android:id="@+id/test"
    android:orientation="horizontal"
    android:layout_width="800px"
    android:layout_height="450px"
    android:layout_row="1"
    android:layout_column="2"
    android:layout_columnSpan="1"
    android:layout_rowSpan="8" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text=""
    android:id="@+id/textViewGraphHeader"
    android:layout_row="0"
    android:layout_column="2" />
</GridLayout>